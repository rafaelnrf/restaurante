    <input id='txtNome' type="text" size="20" maxlength="30"/><br><br>
    <select name='ddlMacro' id='ddlMacro'></select>
    <select name='ddlMicro' id='ddlMicro'></select>
    <input type="button" id="btnBuscaHeader" value="OK"/><br>
